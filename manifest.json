{
  "manifest_version": 2,
  "name": "YouTabMan",
  "version": "1.0.0",
  "version_name" : "1.0.0-Beta",

  "description": "An Addon used to control all of your YouTube tabs.",

  "browser_action": {
    "default_title": "YouTabMan",
    "default_popup": "popup/index.html",
    "default_icon": {
        "16": "icons/popup_icon/icon_16.png",
        "24": "icons/popup_icon/icon_24.png",
        "32": "icons/popup_icon/icon_32.png"
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
